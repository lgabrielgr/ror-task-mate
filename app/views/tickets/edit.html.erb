<div class="container mt-5">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2>Edit Ticket</h2>
    </div>
    <div class="card-body">
      <%= form_for(@ticket) do |f| %>
        <div class="form-group">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, class: "form-label" %>
          <%= f.textarea :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :assignee_id, class: "form-label" %>
          <%= f.collection_select :assignee_id, @assignees, :id, :friendly_name, { prompt: "Select Assignee" },
                                  class: "form-control" %>
        </div>
        <div class="form-group">
          Reporter: <%= @ticket.creator.friendly_name %>
        </div>
        <%= form_group_select(f, :priority, TicketsController::TICKET_PRIORITY_OPTIONS_FOR_SELECTION, "Select Priority") %>
        <%= form_group_select(f, :status, TicketsController::TICKET_STATUS_OPTIONS_FOR_SELECTION, "Select Status") %>
        <div class="form-group">
          <%= f.label :due_date, class: "form-label" %>
          <%= f.date_field :due_date, class: "form-control" %>
        </div>
        <%= f.submit "Save", class: "btn btn-primary mt-3" %>
        <%= link_to "Cancel", ticket_view_path(@ticket), class: "btn btn-secondary mt-3 ml-2" %>
      <% end %>
    </div>
  </div>
</div>
